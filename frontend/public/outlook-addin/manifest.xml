<?xml version="1.0" encoding="UTF-8"?>
<!--
  Outlook Add-in Manifest for The Outlook CRM

  Deployment: M365 admin center > Settings > Integrated apps > Upload custom app > Office Add-in
  Validate locally: npx office-addin-manifest validate manifest.xml

  Manifest gotchas (the offline validator is more lenient than M365 admin center):
  - Version must be four-part: 1.0.0.0 (not 1.0.0)
  - Supertip Description resid must reference a bt:LongStrings entry, not bt:ShortStrings
  - If nesting VersionOverrides v1.1 inside v1.0, the inner xmlns must be
    "http://schemas.microsoft.com/office/mailappversionoverrides/1.1" (with /1.1 suffix)
  - All URLs (icons, taskpane) must return HTTP 200 with no redirects
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  <Id>daee9379-b257-4847-8fd2-1de1be40c299</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>The Outlook</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="The Outlook CRM"/>
  <Description DefaultValue="View and manage CRM contacts from your inbox"/>
  <IconUrl DefaultValue="https://crm.theoutlook.io/outlook-addin/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://crm.theoutlook.io/outlook-addin/icon-128.png"/>
  <SupportUrl DefaultValue="https://crm.theoutlook.io"/>

  <AppDomains>
    <AppDomain>https://crm.theoutlook.io</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://crm.theoutlook.io/outlook-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="CRMGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="ShowTaskpane">
                  <Label resid="ButtonLabel"/>
                  <Supertip>
                    <Title resid="ButtonLabel"/>
                    <Description resid="ButtonDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://crm.theoutlook.io/outlook-addin/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://crm.theoutlook.io/outlook-addin/icon-32.png"/>
        <bt:Image id="Icon80" DefaultValue="https://crm.theoutlook.io/outlook-addin/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://crm.theoutlook.io/outlook-addin/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="CRM"/>
        <bt:String id="ButtonLabel" DefaultValue="CRM Contact"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ButtonDescription" DefaultValue="Look up the email sender in your CRM. View contact details, create new contacts, or update existing records."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
